{
  "fragmentEntryKey": "bbc-podcast-card",
  "name": "BBC Podcast Card",
  "description": "BBC-inspired podcast card fragment for audio content display with play controls and episode information",
  "type": "component",
  "thumbnail": "",
  "configuration": {
    "fieldSets": [
      {
        "fields": [
          {
            "name": "podcastTitle",
            "label": "Podcast Title",
            "description": "Title of the podcast",
            "type": "text",
            "typeOptions": {
              "placeholder": "Global News Podcast"
            },
            "defaultValue": "Global News Podcast"
          },
          {
            "name": "episodeTitle",
            "label": "Episode Title",
            "description": "Title of the specific episode",
            "type": "text",
            "typeOptions": {
              "placeholder": "Israeli strike on Gaza seafront cafe"
            },
            "defaultValue": "Israeli strike on Gaza seafront cafe"
          },
          {
            "name": "description",
            "label": "Episode Description",
            "description": "Brief description of the episode",
            "type": "text",
            "typeOptions": {
              "placeholder": "Videos appear to show the moment a missile hit Al-Baqa cafe"
            },
            "defaultValue": "Videos appear to show the moment a missile hit Al-Baqa cafe"
          },
          {
            "name": "audioUrl",
            "label": "Audio URL",
            "description": "URL to the audio file",
            "type": "text",
            "typeOptions": {
              "placeholder": "https://example.com/audio.mp3"
            },
            "defaultValue": ""
          },
          {
            "name": "podcastUrl",
            "label": "Podcast Page URL",
            "description": "URL to the full podcast page",
            "type": "text",
            "typeOptions": {
              "placeholder": "/audio/play/p0lmcp65"
            },
            "defaultValue": "/audio/play/p0lmcp65"
          },
          {
            "name": "coverImage",
            "label": "Cover Image",
            "description": "URL to the podcast cover image",
            "type": "text",
            "typeOptions": {
              "placeholder": "https://example.com/cover.jpg"
            },
            "defaultValue": ""
          },
          {
            "name": "duration",
            "label": "Duration",
            "description": "Episode duration",
            "type": "text",
            "typeOptions": {
              "placeholder": "35 mins"
            },
            "defaultValue": "35 mins"
          },
          {
            "name": "publishDate",
            "label": "Publish Date",
            "description": "When the episode was published",
            "type": "text",
            "typeOptions": {
              "placeholder": "2025-07-01T12:00:00Z"
            },
            "defaultValue": "2025-07-01T12:00:00Z"
          },
          {
            "name": "category",
            "label": "Category",
            "description": "Podcast category",
            "type": "text",
            "typeOptions": {
              "placeholder": "News"
            },
            "defaultValue": "News"
          },
          {
            "name": "showPlayButton",
            "label": "Show Play Button",
            "description": "Display inline play functionality",
            "type": "checkbox",
            "defaultValue": true
          },
          {
            "name": "showSaveButton",
            "label": "Show Save Button",
            "description": "Display save/bookmark functionality",
            "type": "checkbox",
            "defaultValue": true
          },
          {
            "name": "cardSize",
            "label": "Card Size",
            "description": "Size variant of the podcast card",
            "type": "select",
            "typeOptions": {
              "validValues": [
                {"value": "small", "label": "Small"},
                {"value": "medium", "label": "Medium"},
                {"value": "large", "label": "Large"}
              ]
            },
            "defaultValue": "medium"
          }
        ]
      }
    ]
  }
}
