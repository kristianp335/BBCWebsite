{
  "fragmentEntryKey": "bbc-news-card",
  "name": "BBC News Card",
  "description": "BBC-inspired news card fragment for article display with image, headline, and metadata",
  "type": "component",
  "thumbnail": "",
  "configuration": {
    "fieldSets": [
      {
        "fields": [
          {
            "name": "imageUrl",
            "label": "Image URL",
            "description": "Article image URL",
            "type": "text",
            "typeOptions": {
              "placeholder": "https://example.com/image.jpg"
            },
            "defaultValue": ""
          },
          {
            "name": "imageAlt",
            "label": "Image Alt Text",
            "description": "Alternative text for the image",
            "type": "text",
            "typeOptions": {
              "placeholder": "Description of the image"
            },
            "defaultValue": ""
          },
          {
            "name": "headline",
            "label": "Headline",
            "description": "Article headline",
            "type": "text",
            "typeOptions": {
              "placeholder": "Article headline"
            },
            "defaultValue": "Trump threatens to set Doge on Musk as pair feud again over budget plan"
          },
          {
            "name": "description",
            "label": "Description",
            "description": "Article description or excerpt",
            "type": "text",
            "typeOptions": {
              "placeholder": "Brief description of the article"
            },
            "defaultValue": "The US president suggests the cost-cutting agency the tech titan helped set up could be used against him."
          },
          {
            "name": "linkUrl",
            "label": "Article URL",
            "description": "URL to the full article",
            "type": "text",
            "typeOptions": {
              "placeholder": "/news/article"
            },
            "defaultValue": "/news/articles/czdvv2qqlrqo"
          },
          {
            "name": "category",
            "label": "Category",
            "description": "Article category",
            "type": "text",
            "typeOptions": {
              "placeholder": "News"
            },
            "defaultValue": "US & Canada"
          },
          {
            "name": "publishTime",
            "label": "Publish Time",
            "description": "When the article was published (e.g., '1 hr ago', '2023-07-01T10:00:00Z')",
            "type": "text",
            "typeOptions": {
              "placeholder": "1 hr ago"
            },
            "defaultValue": "1 hr ago"
          },
          {
            "name": "isLive",
            "label": "Live Content",
            "description": "Mark as live content",
            "type": "checkbox",
            "defaultValue": false
          },
          {
            "name": "cardSize",
            "label": "Card Size",
            "description": "Size variant of the card",
            "type": "select",
            "typeOptions": {
              "validValues": [
                {"value": "small", "label": "Small"},
                {"value": "medium", "label": "Medium"},
                {"value": "large", "label": "Large"}
              ]
            },
            "defaultValue": "medium"
          },
          {
            "name": "layout",
            "label": "Layout",
            "description": "Card layout style",
            "type": "select",
            "typeOptions": {
              "validValues": [
                {"value": "vertical", "label": "Vertical (Image on top)"},
                {"value": "horizontal", "label": "Horizontal (Image on side)"},
                {"value": "overlay", "label": "Overlay (Text over image)"}
              ]
            },
            "defaultValue": "vertical"
          }
        ]
      }
    ]
  }
}
